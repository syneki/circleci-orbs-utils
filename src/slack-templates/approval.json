{
	"blocks": [
		{
			"type": "header",
			"text": {
				"type": "plain_text",
				"text": "Waiting for approval! :hand:",
				"emoji": true
			}
		},
		{
			"type": "section",
			"fields": [
				{
					"type": "mrkdwn",
					"text": "*Project*: $PARAM_PROJECT"
				},
                {
					"type": "mrkdwn",
					"text": "*Version*: $PARAM_VERSION"
				},
                {
					"type": "mrkdwn",
					"text": "*Environment*: $PARAM_ENVIRONMENT"
				},
				{
					"type": "mrkdwn",
					"text": "*When*: $(date +'%m/%d/%Y %T')"
				}
			],
			"accessory": {
				"type": "image",
				"image_url": "https://syneki.s3.eu-west-3.amazonaws.com/logo/curve.png",
				"alt_text": "Syneki logo"
			}
		},
		{
			"type": "actions",
			"elements": [
                {
					"type": "button",
					"text": {
						"type": "plain_text",
						"text": "View deployment"
					},
					"url": "${PARAM_URL}"
				},
				{
					"type": "button",
					"text": {
						"type": "plain_text",
						"text": "Approve deployment"
					},
					"url": "${SLACK_PARAM_CIRCLECI_HOST}/workflow-run/${CIRCLE_WORKFLOW_ID}"
				}
			]
		}
	]
}